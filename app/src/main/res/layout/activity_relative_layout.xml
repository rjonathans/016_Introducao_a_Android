<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayoutActivity">

    <ImageView
        android:id="@+id/imagefound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/botaorelativelayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Teste1"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/botaorelativelayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/botaorelativelayout1"
        android:background="@color/colorAccent"
        android:text="Teste2"
        android:textColor="#ffffff"
        android:layout_below="@id/botaorelativelayout1"/>

    <ImageView
        android:id="@+id/imagem_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/botaorelativelayout2"
        android:src="@drawable/google"/>

</RelativeLayout>